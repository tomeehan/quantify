<div class="lg:flex lg:items-center lg:justify-between">
  <div class="min-w-0 flex-1">
    <% if defined?(breadcrumbs) && breadcrumbs.present? %>
      <nav aria-label="Breadcrumb" class="flex">
        <ol role="list" class="flex items-center space-x-4 list-none pl-0">
          <% breadcrumbs.each_with_index do |crumb, index| %>
            <li>
              <div class="flex items-center">
                <% if index.positive? %>
                  <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="size-5 shrink-0 text-gray-400 dark:text-gray-500">
                    <path d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" fill-rule="evenodd" />
                  </svg>
                <% end %>
                <% name = crumb[:name] || crumb["name"] %>
                <% href = crumb[:href] || crumb["href"] %>
                <% margin_class = index.positive? ? 'ml-4' : '' %>
                <% if href.present? %>
                  <%= link_to name, href, class: "#{margin_class} text-sm font-medium text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300" %>
                <% else %>
                  <span class="#{margin_class} text-sm font-medium text-gray-500 dark:text-gray-400"><%= name %></span>
                <% end %>
              </div>
            </li>
          <% end %>
        </ol>
      </nav>
    <% end %>

    <h2 class="mt-2 text-2xl/7 font-bold text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight dark:text-white"><%= title %></h2>

    <% if defined?(subheading) && subheading.present? %>
      <div class="mt-1 sm:mt-0">
        <div class="mt-2 text-sm text-gray-500 dark:text-gray-400">
          <%= subheading %>
        </div>
      </div>
    <% end %>
  </div>

  <% if defined?(actions) && actions.present? %>
    <div class="mt-5 flex lg:mt-0 lg:ml-4">
      <%= actions %>
    </div>
  <% end %>
</div>
