<div class="my-4 lg:px-4">
  <div class="">

      <%= render "shared/page_header",
                title: "Projects",
                breadcrumbs: [
                  { name: "Projects" }
                ],
                actions: (capture do %>
                  <% if policy(Project).create? %>
                    <%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
                  <% end %>
                <% end) %>

      <% if @projects.exists? %>
        <div class="mt-8 flow-root">
          <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
              <div class="overflow-hidden shadow-sm outline-1 outline-black/5 sm:rounded-lg dark:shadow-none dark:-outline-offset-1 dark:outline-white/10">
                <table class="relative min-w-full divide-y divide-gray-300 dark:divide-white/15">
                  <thead class="bg-gray-50 dark:bg-gray-800/75">
                    <tr>
                      <th scope="col" class="py-3.5 pr-3 pl-4 text-left text-sm font-semibold text-gray-900 sm:pl-6 dark:text-gray-200"><%= Project.human_attribute_name(:name) %></th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-gray-200"><%= Project.human_attribute_name(:address) %></th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-gray-200">Type</th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-gray-200"><%= Project.human_attribute_name(:square_footage) %></th>
                      <th scope="col" class="py-3.5 pr-4 pl-3 sm:pr-6">
                        <span class="sr-only">Actions</span>
                      </th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200 bg-white dark:divide-white/10 dark:bg-gray-800/50">
                    <% @projects.each do |project| %>
                      <tr>
                        <td class="py-4 pr-3 pl-4 text-sm font-medium whitespace-nowrap text-gray-900 sm:pl-6 dark:text-white">
                          <%= link_to project.name, project %>
                        </td>
                        <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500 dark:text-gray-400" title="<%= project.address %>"><%= project.address %></td>
                        <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500 dark:text-gray-400"><%= project.project_type.humanize %></td>
                        <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500 dark:text-gray-400"><%= number_with_delimiter(project.square_footage) if project.square_footage.present? %></td>
                        <td class="py-4 pr-4 pl-3 text-right text-sm font-medium whitespace-nowrap sm:pr-6">
                          <div class="space-x-2">
                            <%= link_to "View", project, class: "text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300" %>
                            <% if policy(project).update? %>
                              <%= link_to "Edit", edit_project_path(project), class: "text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300" %>
                            <% end %>
                            <% if policy(project).destroy? %>
                              <%= link_to t("delete"), project, class: "text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300", data: { turbo_method: :delete, turbo_confirm: t("are_you_sure") } %>
                            <% end %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center p-8">
          <%= image_tag "empty.svg", class: "w-1/3 mb-4 m-auto" %>
          <p class="text-gray-600 dark:text-gray-300">No projects yet.</p>
        </div>
      <% end %>

  </div>
</div>
