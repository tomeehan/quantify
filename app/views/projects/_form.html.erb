<%= form_with(model: project) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: true, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, placeholder: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :square_footage %>
    <%= form.number_field :square_footage, placeholder: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :project_type, "Type" %>
    <%= form.select :project_type, Project.project_types.keys.map { |k| [k.humanize, k] }, {}, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? && policy(form.object).destroy? %>
      <%= link_to t("delete"), form.object, class: "btn btn-danger btn-outline", data: { turbo_method: :delete, turbo_confirm: t("are_you_sure") } %>
    <% end %>
  </div>
<% end %>

