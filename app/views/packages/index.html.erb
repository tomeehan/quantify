<div class="my-4 lg:px-4">
  <%= render "shared/page_header",
            title: "Packages",
            breadcrumbs: [
              { name: "Projects", href: projects_path },
              { name: @bill.project.name, href: project_path(@bill.project) },
              { name: "Packages" }
            ],
            actions: (capture do %>
              <%= link_to "New Package", new_bill_package_path(@bill), class: "btn btn-primary" if policy(@bill).update? %>
            <% end) %>

  <% if @packages.exists? %>
    <div class="mt-8 flow-root">
      <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
          <div class="overflow-hidden shadow-sm outline-1 outline-black/5 sm:rounded-lg dark:shadow-none dark:-outline-offset-1 dark:outline-white/10">
            <table class="relative min-w-full divide-y divide-gray-300 dark:divide-white/15">
              <thead class="bg-gray-50 dark:bg-gray-800/75">
                <tr>
                  <th scope="col" class="py-3.5 pr-3 pl-4 text-left text-sm font-semibold text-gray-900 sm:pl-6 dark:text-gray-200">Name</th>
                  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-gray-200">Total (excl VAT)</th>
                  <th scope="col" class="py-3.5 pr-4 pl-3 sm:pr-6">
                    <span class="sr-only">Actions</span>
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white dark:divide-white/10 dark:bg-gray-800/50">
                <% @packages.each do |package| %>
                  <tr>
                    <td class="py-4 pr-3 pl-4 text-sm font-medium whitespace-nowrap text-gray-900 sm:pl-6 dark:text-white">
                      <%= package.name %>
                    </td>
                    <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-500 dark:text-gray-400">
                      <%= number_to_currency(package.total_excl_vat || 0) %>
                    </td>
                    <td class="py-4 pr-4 pl-3 text-right text-sm font-medium whitespace-nowrap sm:pr-6">
                      <div class="space-x-2">
                        <%= link_to "View", bill_package_path(@bill, package), class: "text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300" %>
                        <% if policy(@bill).update? %>
                          <%= link_to "Edit", edit_bill_package_path(@bill, package), class: "text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300" %>
                          <%= link_to t("delete"), bill_package_path(@bill, package), class: "text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300", data: { turbo_method: :delete, turbo_confirm: t("are_you_sure") } %>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="mt-6">
      <%= render "shared/empty_state", href: new_bill_package_path(@bill), label: "No packages. Click here to add the first package" %>
    </div>
  <% end %>
</div>
