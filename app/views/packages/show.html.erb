<div class="my-4 lg:px-4">
  <%= render "shared/page_header",
            title: @package.name,
            breadcrumbs: [
              { name: "Projects", href: projects_path },
              { name: @bill.project.name, href: project_path(@bill.project) },
              { name: "Packages", href: bill_packages_path(@bill) },
              { name: @package.name }
            ],
            actions: (capture do %>
              <div class="space-x-2">
                <% if policy(@bill).update? %>
                  <%= link_to "Edit", edit_bill_package_path(@bill, @package), class: "btn btn-secondary" %>
                  <%= link_to t("delete"), bill_package_path(@bill, @package), class: "btn btn-danger btn-outline", data: { turbo_method: :delete, turbo_confirm: t("are_you_sure") } %>
                <% end %>
                <%= link_to "Back", bill_packages_path(@bill), class: "btn btn-light" %>
              </div>
            <% end) %>

  <div class="lg:mt-6 lg:p-10 p-4 bg-white rounded-lg border border-gray-200 dark:bg-gray-900 dark:border-gray-800">
    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <dt class="text-xs uppercase text-gray-500 dark:text-gray-300">Name</dt>
        <dd class="text-sm"><%= @package.name %></dd>
      </div>
      <div>
        <dt class="text-xs uppercase text-gray-500 dark:text-gray-300">Total (excl VAT)</dt>
        <dd class="text-sm"><%= number_to_currency(@package.total_excl_vat || 0) %></dd>
      </div>
    </dl>
  </div>

</div>
