<%= form_with(model: [@bill, @package]) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: true, autofocus: true, required: true, class: "form-control" %>
  </div>

  <div class="form-group <%= 'flex justify-between' if form.object.persisted? %>">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? && policy(@bill).update? %>
      <%= link_to t("delete"), bill_package_path(@bill, form.object), class: "btn btn-danger btn-outline", data: { turbo_method: :delete, turbo_confirm: t("are_you_sure") } %>
    <% end %>
  </div>
<% end %>
